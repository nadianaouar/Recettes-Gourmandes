@model RecettesGourmandes.Models.Recette

@{
    ViewBag.Title = "AjouterRecette";
}

<h2>Ajouter une Recette</h2>
@using (Html.BeginForm("AjouterRecette", "Recettes", FormMethod.Post))
{
<form>
    <fieldset>
        <div class="form-group">
            <label class="form-label mt-4">Nom de la Recette:</label>
            @Html.EditorFor(model => model.NomRecette)
            @Html.ValidationMessageFor(model => model.NomRecette)
        </div>
      
        <div class="form-group">
            <label class="form-label mt-4">Description de la Recette: </label>
            @Html.EditorFor(model => model.Description)
        </div>
        <div class="form-group">
            <button value="AjouterRecette" type="submit" class="btn btn-primary">Ajouter</button>
            <button type="Reset" onclick="location.href='@Url.Action("ListeRecettes","Recettes")'" class="btn btn-primary">Cancel</button>
        </div>
    </fieldset>
</form>
}